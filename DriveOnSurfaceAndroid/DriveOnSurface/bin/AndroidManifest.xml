<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karts.driveonsurface"
    android:versionCode="1"
    android:versionName="1.0" 
    >
	<uses-permission android:name="android.permission.INTERNET">
	    	
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK">
	    </uses-permission>
    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstMenuActivity"
            android:label="@string/title_activity_first_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="MainPlayActivity"
            >
            
        </activity>
        <activity
            android:name=".KartFragment"
            android:label="@string/app_name">
            </activity>
             <activity android:name="PlayActivity"
				  android:screenOrientation="landscape" ></activity>
              <activity android:name="PlayControlActivity"
				  android:screenOrientation="landscape" ></activity>
              <activity android:name="SettingActivity"></activity>
            
    </application>

</manifest>